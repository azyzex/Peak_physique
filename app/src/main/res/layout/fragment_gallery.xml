<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.gallery.GalleryFragment">

<LinearLayout
android:id="@+id/linearLayout4"
    android:background="@drawable/bg"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_margin="80dp"
            android:src="@drawable/love" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity=""
            android:layout_marginTop="-70dp"
            android:fontFamily="@font/bebas_neue"
            android:gravity="center"
            android:text="THANK YOU FOR INSTALLING !"

            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:text="PeakPhysique - 2024 - Android"
            android:textColor="@color/dark_gray"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amiko"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:text="Developed by Guenni Mohammed Aziz and Nassim Abid, PeakPhysique is a user-friendly Android app designed for health monitoring and management. Whether you're an athlete, fitness enthusiast, or simply want to prioritize your well-being, PeakPhysique has you covered."
            android:textStyle="bold" />
</LinearLayout>

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
