<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".ui.home.HomeFragment"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearlayourSHALF"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/red_rose_light"
                android:gravity="center"
                android:padding="5dp"
                android:text="Tip of the day !"
                android:textColor="@color/dark_gray"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/red_rose_light"
                android:gravity="center"
                android:text="Before snacking, drink water. It can curb hunger and help you stay hydrated. \n \n \n \n"
                android:textColor="@color/dark_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayourF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearlayourSHALF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight="300dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth="match_parent">

            <TextView
                android:id="@+id/textView00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/red_rose_light"
                android:text="welcome back !"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView72"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="monospace"
                        android:text="Today you're at :"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txtweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_with_ripple"
                        android:clickable="false"
                        android:drawableStart="@drawable/kg"
                        android:fontFamily="@font/red_rose_light"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingStart="11dp"
                        android:text="76 kg"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtheight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_with_ripple"
                        android:clickable="false"
                        android:drawableLeft="@drawable/rulericon_ic"
                        android:fontFamily="@font/red_rose_light"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingLeft="11dp"
                        android:text="179 cm"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/fitbody" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayourSHALF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintHeight="560dp"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayourF"
            app:layout_constraintVertical_bias="0.5"
            tools:ignore="MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="3dp">

            <LinearLayout
                android:id="@+id/linearlayouttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="monospace"
                    android:text="@string/fitness_health_calculators"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout2Mbtns"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        android:onClick="goToSecondPage"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:clickable="true"
                        android:drawableTop="@drawable/bmi_ic"
                        android:drawablePadding="-10px"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="10dp"
                        android:text="BMI"
                        android:textColor="#000000"
                        android:textSize="25dp" />


                    <Button
                        android:id="@+id/button5"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:drawableTop="@drawable/bmr_ic"
                        android:drawablePadding="-25px"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="-10dp"
                        android:text="BMR"
                        android:textColor="#000000"
                        android:textSize="25dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Button
                        android:id="@+id/button2"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:drawableTop="@drawable/bodyfat_ic"
                        android:drawablePadding="-10px"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="10dp"
                        android:text="Body Fat"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/buttonCalories"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:drawableTop="@drawable/kcal_ic"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="19dp"
                        android:text="CALORIES"
                        android:textColor="#000000"
                        android:textSize="25dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonc"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:drawableTop="@drawable/weight_ic"
                        android:drawablePadding="-10px"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="10dp"
                        android:text="ideal weight"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <Button
                        android:id="@+id/buttonb"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:drawableTop="@drawable/water_ic"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="-1dp"
                        android:text="Water Intake"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <Button
                        android:id="@+id/buttona"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_with_ripple"
                        android:drawableTop="@drawable/heart_ic"
                        android:drawablePadding="-6dp"
                        android:fontFamily="@font/baloo_thambi"
                        android:paddingTop="10dp"
                        android:text="heart rate"
                        android:textColor="#000000"
                        android:textSize="19dp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
